{
  "compileOnSave": false,
  "compilerOptions": {
      "module": "ES2022",
      "esModuleInterop": true,
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "lib": [
          "es2015",
          "dom"
      ],
      "types": [
      ]
  },
  "include": [
      "src/**/*"
  ]
}
